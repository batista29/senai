head
  meta(charset='utf-8')
  title Paciente
  script(src="app.js")
body(onload=`armazenaPaciente()`)
 main
    each armazenaPaciente in paciente
        - let imc = armazenaPaciente.peso/(armazenaPaciente.altura*armazenaPaciente.altura)
        - let miliSec = Date.parse(armazenaPaciente.nascimento)
        - let idade = Math.floor((Date.now() - miliSec) / (365.25 * 24 * 60 * 60 * 1000))
          div
          p #{age}
            if (imc < 18.5)
              p Abaixo do peso 
              p ID: #{armazenaPaciente.id}
              p Nome: #{armazenaPaciente.nome_completo}
              p Idade: #{idade}
              p Peso: #{armazenaPaciente.peso} kg
              p Altura: #{armazenaPaciente.altura}
              p IMC: #{imc.toFixed(2)}
            else if (imc >= 18.5 && imc < 24.99)
              p Peso normal
              p ID: #{armazenaPaciente.id}
              p Nome: #{armazenaPaciente.nome_completo}
              p Idade: #{idade}
              p Peso: #{armazenaPaciente.peso} kg
              p Altura: #{armazenaPaciente.altura}
              p IMC: #{imc.toFixed(2)}
            else if (imc >= 25 && imc < 29.99)
              p Acima do peso normal
              p ID: #{armazenaPaciente.id}
              p Nome: #{armazenaPaciente.nome_completo}
              p Idade: #{idade}
              p Peso: #{armazenaPaciente.peso} kg
              p Altura: #{armazenaPaciente.altura}
              p IMC: #{imc.toFixed(2)}
            else
              p A coisa esta feia
              p ID: #{armazenaPaciente.id}
              p Nome: #{armazenaPaciente.nome_completo}
              p Idade: #{idade}
              p Peso: #{armazenaPaciente.peso} kg
              p Altura: #{armazenaPaciente.altura}
              p IMC: #{imc.toFixed(2)}