head
  meta(charset='utf-8')
  title Paciente
  script(src="app.js")
body(onload=`armazenaPaciente()`)(style="background-color: #b7d5e5; display: flex; justify-content: center; font-size: 20px;")
 main
    div(style="display:grid")
        input(type="text" placeholder="digite o nome")
        input(type="date" placeholder="coloque a data de nascimento")
        input(type="text" placeholder="digite o peso")
        input(type="text" placeholder="digite o altura")
        button adicionar
    each armazenaPaciente in paciente
        - let imc = armazenaPaciente.peso/(armazenaPaciente.altura*armazenaPaciente.altura)
        - let miliSec = Date.parse(armazenaPaciente.nascimento)
        - let idade = Math.floor((Date.now() - miliSec) / (365.25 * 24 * 60 * 60 * 1000))
          div(style="background-color:#000080; margin-top:1vh; color:white; border: 3px solid red; width: 500px; text-align: center")
            p #{age}
              if (imc < 18.5)
                p Abaixo do peso 
                p ID: #{armazenaPaciente.id}
                p Nome: #{armazenaPaciente.nome_completo}
                p Idade: #{idade}
                p Peso: #{armazenaPaciente.peso} kg
                p Altura: #{armazenaPaciente.altura}
                p IMC: #{imc.toFixed(2)}
              else if (imc >= 18.5 && imc < 24.99)
                p Peso normal
                p ID: #{armazenaPaciente.id}
                p Nome: #{armazenaPaciente.nome_completo}
                p Idade: #{idade}
                p Peso: #{armazenaPaciente.peso} kg
                p Altura: #{armazenaPaciente.altura}
                p IMC: #{imc.toFixed(2)}
              else if (imc >= 25 && imc < 29.99)
                p Acima do peso normal
                p ID: #{armazenaPaciente.id}
                p Nome: #{armazenaPaciente.nome_completo}
                p Idade: #{idade}
                p Peso: #{armazenaPaciente.peso} kg
                p Altura: #{armazenaPaciente.altura}
                p IMC: #{imc.toFixed(2)}
              else
                p A coisa esta feia
                p ID: #{armazenaPaciente.id}
                p Nome: #{armazenaPaciente.nome_completo}
                p Idade: #{idade}
                p Peso: #{armazenaPaciente.peso} kg
                p Altura: #{armazenaPaciente.altura}
                p IMC: #{imc.toFixed(2)}